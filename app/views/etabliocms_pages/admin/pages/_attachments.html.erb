
<% @page.attachments.each do |attachment| %>
    <p class="attachment">

      <span class="url"><%= attachment.data_file_name %></span>

      <%= link_to_function t('admin.attachments.copypaste'),
                           "AdminPages.initCopyPaste(this);",
                           :class => "icon icon-copypaste", :title => t('admin.attachments.copypaste') %>


    </p>
<% end %>